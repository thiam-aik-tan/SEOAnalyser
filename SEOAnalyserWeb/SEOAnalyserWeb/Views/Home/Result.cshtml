                </tr>
            }
        </tbody>
    </table>
}

@if (Model.ExternalLinkOccurence.Count > 0)
{
    <table id="tblLink" class="display">
        <caption><h4>External Link Analysis</h4></caption>
        <thead>
            <tr>
                <th>External Link</th>
                <th>Number Of Occurences</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ExternalLinkOccurence)
            {
                <tr>
                    <td>@item.Key</td>

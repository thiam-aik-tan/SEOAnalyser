                </tr>
            }
        </tbody>
    </table>
}

<script type="text/javascript">
    $(document).ready(function () {
        $('#tblText').DataTable({
            "paging": false,
            "searching": false
        });

        $('#tblBody').DataTable({
            "paging": false,
            "searching": false
        });

        $('#tblMeta').DataTable({
            "paging": false,
            "searching": false
        });

        $('#tblLink').DataTable({
            "paging": false,
            "searching": false
        });
    });
</script>